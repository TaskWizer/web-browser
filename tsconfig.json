{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "packages/web-browser/**/*",
    "types.ts",
    "App.tsx",
    "constants.tsx",
    "components/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "api",
    "packages/web-browser/node_modules",
    "packages/web-browser/dist",
    "packages/web-browser/api"
  ]
}